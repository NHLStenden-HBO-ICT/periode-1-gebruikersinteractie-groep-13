<Window x:Class="BeatEmApp.Quit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatEmApp"
        mc:Ignorable="d"
        Title="Quit" Height="450" Width="800">
    <Grid>
        <Button x:Name="Back" Background="#F3C9A6" Content="terug" Click="OnClick1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="125"/>
        <Button x:Name="quit" Background="#F3C9A6" Content="submit" Click="OnClick2" HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Width="124" Margin="0,355,0,0"/>
        <TextBox x:Name="EmailPlayer" FontFamily="Regular 400" Text="email speler 1" TextAlignment="Center" Background="#6D82AC" Margin="316,89,316,294"></TextBox>
        <TextBox x:Name="EmailPlayer2" Margin="316,155,316,228" Text="email speler 2" FontFamily="Regular 400" TextAlignment="Center" Background="#6D82AC"></TextBox>
        <TextBox x:Name="info" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" FontSize="16" Text="extra optioneel info" TextAlignment="Center" VerticalAlignment="Top" Background="#6D82AC" Height="48" Width="214"/>
        <TextBox x:Name="error" HorizontalAlignment="Center" Margin="0,285,0,0" TextWrapping="Wrap" FontSize="16" Visibility="Hidden" Text="error: emails niet ingevuld" TextAlignment="Center" VerticalAlignment="Top" Background="#586C70" Height="65" Width="214"/>
    </Grid>
</Window>
